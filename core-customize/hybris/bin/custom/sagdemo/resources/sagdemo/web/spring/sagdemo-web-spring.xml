<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">
           
    <context:component-scan base-package="org.training.controllers"/>

	<!-- Cache manager for addon -->

	<alias name="defaultSagdemoCacheManager" alias="sagdemoCacheManager"/>
	<bean id="defaultSagdemoCacheManager" class="org.springframework.cache.ehcache.EhCacheCacheManager">
		<property name="cacheManager" ref="sagdemoEhcache"/>
	</bean>

	<alias name="defaultSagdemoEhcache" alias="sagdemoEhcache"/>
	<bean id="defaultSagdemoEhcache" class="de.hybris.platform.webservicescommons.cache.TenantAwareEhCacheManagerFactoryBean">
		<property name="cacheNamePrefix" value="sagdemoCache_"/>
		<property name="configLocation" value="/WEB-INF/cache/addons/sagdemo/ehcache.xml"/>
	</bean>

	<bean depends-on="wsCacheManagerList" parent="listMergeDirective">
		<property name="add" ref="sagdemoCacheManager"/>
	</bean>

</beans>
